<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TableRow>

                    <TextView
                        android:layout_width="134dp"

                        android:inputType="textPersonName"
                        android:text="יש למלא את השדות הבאים"

                        android:textColor="#FA1E64"
                        android:textSize="25sp" />
                </TableRow>

                <TableRow>

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="398dp"


                        android:layout_marginEnd="0dp"
                        android:layout_marginRight="0dp"
                        android:hint="שם מלא" />
                </TableRow>

                <TableRow>

                    <EditText

                        android:id="@+id/phone"
                        android:layout_width="361dp"

                        android:hint="טלפון ליצירת קשר          "
                        android:inputType="phone" />
                </TableRow>

                <TableRow>

                    <EditText
                        android:id="@+id/mailAddress"


                        android:hint="מייל"
                        android:inputType="textEmailAddress" />
                </TableRow>

                <TableRow>

                    <TextView

                        android:layout_width="134dp"

                        android:inputType="textPersonName"
                        android:text="@string/begindate" />
                </TableRow>

                <TableRow>

                    <DatePicker
                        android:id="@+id/startDate"

                        android:layout_width="396dp"
                        android:layout_height="115dp"
                        android:background="#4DAD1457"
                        android:calendarViewShown="false"
                        android:datePickerMode="spinner"
                        android:fadeScrollbars="true" />

                </TableRow>

                <TableRow>

                    <TextView

                        android:layout_width="134dp"

                        android:inputType="textPersonName"
                        android:text="@string/backdate" />
                </TableRow>

                <TableRow>

                    <DatePicker
                        android:id="@+id/finishdate"

                        android:layout_width="396dp"
                        android:layout_height="115dp"
                        android:background="#4DAD1457"
                        android:calendarViewShown="false"
                        android:datePickerMode="spinner"
                        android:fadeScrollbars="true" />
                </TableRow>

                <TableRow>

                    <EditText
                        android:id="@+id/city"
                        android:layout_width="368dp"

                        android:hint="עיר"
                        android:textColor="@color/black" />
                </TableRow>
                <TableRow>

                    <EditText
                        android:id="@+id/street"
                        android:layout_width="368dp"

                        android:hint="רחוב ומספר בית"
                        android:textColor="@color/black" />
                </TableRow>

                <TableRow>

                    <EditText
                        android:id="@+id/destination"
                        android:layout_width="365dp"

                        android:hint="כתובת יעד/ים"
                        android:textColor="@color/black" />
                </TableRow>
                <TableRow>

                    <TextView
                        android:text="הפרד/י בפסיק יעדים שונים"
                        android:textSize="8sp" />
                </TableRow>

                <TableRow>

                    <EditText
                        android:id="@+id/numOfTravelers"
                        android:layout_width="365dp"

                        android:hint="מספר נוסעים"
                        android:inputType="number" />
                </TableRow>

                <TableRow>

                    <EditText
                        android:id="@+id/companyName"
                        android:layout_width="365dp"

                        android:hint="שם חברה"
                        android:inputType="number"
                        android:enabled="false"/>
                </TableRow>

                <TableRow>

                    <EditText
                        android:id="@+id/status"
                        android:layout_width="323dp"

                        android:text="סטטוס דרישה"
                        android:textColor="@color/material_on_background_disabled"
                        android:enabled="false"/>
                </TableRow>


            </TableLayout>

            <Button
                android:id="@+id/button2"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundbutten"
                android:backgroundTint="#FA1E64"
                android:baselineAligned="false"

                android:text="ביצוע הזמנה"
                android:textSize="15sp"
                app:backgroundTint="#16351B"
                app:cornerRadius="28dp"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="668dp"></Button>


        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>