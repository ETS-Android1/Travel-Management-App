<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/backg"
    tools:context=".UI.MainActivity">


    <Button
        android:id="@+id/button"

        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:layout_width="383dp"
        android:layout_height="68dp"
        android:background="#FFFFFF"

        android:onClick="onclick"
        android:text="הזמן נסיעה"
        android:textColor="#EE17716E"
        android:textColorHighlight="#009688"
        android:textColorHint="#0B0A0A"
        android:textColorLink="#171614"
        android:textStyle="bold"
        app:backgroundTint="#D3F1EEEE"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.767"
        app:rippleColor="#070507" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="245dp"
        android:layout_height="99dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="232dp"
        android:fontFamily="sans-serif-light"
        android:includeFontPadding="false"
        android:shadowColor="#171414"
        android:text="Itravely."
        android:textColor="#FAF5F7"
        android:textSize="70sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/phonenum"
        android:layout_width="280dp"
        android:layout_height="29dp"
        android:layout_marginTop="684dp"
        android:autoLink="phone"
        android:text="@string/call_us"
        android:textColor="#F8F3F3"
        android:textColorLink="#EA4F4F"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.297"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/maillink"
        android:layout_width="259dp"
        android:layout_height="31dp"
        android:autoLink="email"
        android:text="@string/email_us"
        android:textColor="#E8E7EC"
        android:textColorHint="#F6F4F4"
        android:textColorLink="#EA4F4F"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.302"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.942" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="26dp"
        android:layout_height="31dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.012"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.987"
        app:srcCompat="@mipmap/callicon" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="30dp"
        android:layout_height="23dp"
        android:layout_marginEnd="364dp"
        android:layout_marginRight="364dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@mipmap/eicon" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="82dp"
        android:layout_height="64dp"
        android:layout_marginTop="244dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.957"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/loc" />


</androidx.constraintlayout.widget.ConstraintLayout>
